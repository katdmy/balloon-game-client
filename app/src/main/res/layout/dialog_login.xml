<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="387dp"
    android:layout_height="256dp"
    android:background="@drawable/dialog_bg">

    <EditText
        android:id="@+id/et_login_name"
        android:layout_width="288dp"
        android:layout_height="48dp"
        android:layout_marginTop="55dp"
        android:background="@drawable/dialog_edittext_bg"
        android:fontFamily="@font/krabuler"
        android:gravity="center"
        android:hint="@string/dialog_login_hint_enter_name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="170dp"
        android:layout_height="48dp"
        android:layout_marginTop="63dp"
        android:layout_marginBottom="42dp"
        android:text="@string/dialog_login_join_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_login_name" />

</androidx.constraintlayout.widget.ConstraintLayout>