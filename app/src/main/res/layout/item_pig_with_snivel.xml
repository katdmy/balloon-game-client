<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/vNickname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/vPeppe"
        app:layout_constraintEnd_toEndOf="@id/vPeppe"
        app:layout_constraintStart_toStartOf="@id/vPeppe"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="NAGIBATOR666" />


    <ImageView
        android:id="@+id/vPeppe"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/animation_peppe"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.katdmy.android.balloon_game_client.utils.CustomSnivel
        android:id="@+id/vSnivel"
        android:layout_width="0dp"
        android:layout_height="95dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/vPeppe"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/vPeppe"
        app:layout_constraintTop_toTopOf="@id/vPeppe"
        app:layout_constraintVertical_bias="0.0"
        app:snivelX="95dp"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_group_27"
        app:layout_constraintStart_toStartOf="@id/vPeppe"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="115dp"
        android:layout_marginTop="43dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>